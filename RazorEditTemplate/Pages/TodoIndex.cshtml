@page
@model RazorEditTemplate.Pages.TodoIndexModel
<form method="post">
    <table>
        <tr> <th>Name</th> <th>Is Done</th> </tr>

        @for (int i = 0; i < Model.ToDoItems.Count(); i++)
        {
            <tr>
                @Html.EditorFor(model => Model.ToDoItems[i])
            </tr>
        }

    </table>
    <button type="submit">Save</button>
</form>